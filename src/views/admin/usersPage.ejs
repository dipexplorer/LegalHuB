<%- layout("/layouts/boilerplate") -%>

<style>
  body {
    font-family: "Inter", system-ui, sans-serif;
    background: #0f172a;
    margin: 0;
    color: #f1f5f9;
  }

  .users-container {
    padding: 40px 20px 70px;
    max-width: 1280px;
    margin: auto;
  }

  h1 {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 35px;
    text-align: center;
    color: #f9fafb;
    letter-spacing: -0.5px;
  }

  /* Stats Cards - Improved */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 24px;
  margin-bottom: 40px;
}

.stat-card {
  background: linear-gradient(145deg, #1f2937, #111827);
  padding: 30px 25px;
  border-radius: 18px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.5);
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card::before {
  content: '';
  position: absolute;
  width: 120%;
  height: 120%;
  background: rgba(59,130,246,0.15);
  top: -10%;
  left: -10%;
  transform: rotate(25deg);
  z-index: 0;
  transition: all 0.5s ease;
  border-radius: 50%;
}

.stat-card:hover::before {
  transform: rotate(45deg) scale(1.1);
}

.stat-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 15px 35px rgba(0,0,0,0.65);
}

.stat-icon {
  width: 50px;
  height: 50px;
  margin-bottom: 15px;
  color: #3b82f6;
  transition: transform 0.3s ease, color 0.3s ease;
  z-index: 1;
  position: relative;
}

.stat-card:hover .stat-icon {
  transform: scale(1.2) rotate(10deg);
  color: #60a5fa;
}

.stat-title {
  font-size: 14px;
  color: #9ca3af;
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 1px;
  z-index: 1;
  position: relative;
}

.stat-value {
  font-size: 32px;
  font-weight: 800;
  color: #f9fafb;
  z-index: 1;
  position: relative;
}
  /* Filters */
  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    margin-bottom: 28px;
    align-items: center;
    justify-content: flex-start;
  }

  .filters input,
  .filters select {
    padding: 11px 14px;
    border-radius: 8px;
    border: 1px solid #334155;
    background: #0f172a;
    font-size: 15px;
    color: #f1f5f9;
    outline: none;
    transition: border 0.2s ease, box-shadow 0.2s ease;
  }

  .filters input:focus,
  .filters select:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 8px rgba(59,130,246,0.4);
  }

  /* Base Button */
.btn {
  padding: 10px 18px;
  font-size: 14px;
  font-weight: 600;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.25s ease;
  border: 2px solid transparent;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

/* Activate (green) */
.btn-activate {
  background: linear-gradient(90deg, #22c55e, #16a34a);
  color: #fff;
  border: none;
}
.btn-activate:hover {
  background: linear-gradient(90deg, #16a34a, #15803d);
  transform: translateY(-2px);
  box-shadow: 0 4px 14px rgba(34,197,94,0.45);
}

/* Deactivate (orange) */
.btn-deactivate {
  background: linear-gradient(90deg, #f97316, #ea580c);
  color: #fff;
  border: none;
}
.btn-deactivate:hover {
  background: linear-gradient(90deg, #ea580c, #c2410c);
  transform: translateY(-2px);
  box-shadow: 0 4px 14px rgba(249,115,22,0.45);
}

/* Apply / Filter button (blue) */
.btn-filter { 
  background: linear-gradient(90deg,#3b82f6,#2563eb); 
  color: #fff; 
  border: none;
}
.btn-filter:hover { 
  background: linear-gradient(90deg,#2563eb,#1e40af);
  transform: translateY(-2px);
  box-shadow: 0 4px 14px rgba(59,130,246,0.45);
}

/* Reset button (gray) */
.btn-reset { 
  background: #6b7280; 
  color: #fff; 
  border: none;
}
.btn-reset:hover { 
  background: #4b5563; 
  transform: translateY(-2px);
  box-shadow: 0 4px 14px rgba(107,114,128,0.45);
}

/* Delete button (red) */
.btn-delete {
  background: linear-gradient(90deg,#ef4444,#b91c1c);
  color: #fff;
  border: none;
}
.btn-delete:hover {
  background: linear-gradient(90deg,#b91c1c,#991b1b);
  transform: translateY(-2px);
  box-shadow: 0 4px 14px rgba(239,68,68,0.45);
}

/* Optional: Icon inside buttons */
.btn svg {
  width: 16px;
  height: 16px;
}


  /* Table */
  .table-container {
    background: #1e293b;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.55);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    color: #f1f5f9;
  }

  thead {
    background: #312e81;
    position: sticky;
    top: 0;
    z-index: 2;
  }

  th, td {
    padding: 16px 20px;
    text-align: left;
    font-size: 15px;
  }

  th {
    font-weight: 700;
    color: #ffffff;
    border-bottom: 2px solid #4338ca;
    letter-spacing: 0.3px;
  }

  tbody tr:nth-child(even) { background: #24344c; }
  tbody tr:hover { background: #33425c; transition: background 0.2s ease; }

  /* Profile */
  .profile-pic {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 12px;
    vertical-align: middle;
    border: 2px solid #334155;
  }

  /* Badges */
  .badge {
    padding: 6px 12px;
    border-radius: 14px;
    font-size: 13px;
    font-weight: 600;
    text-transform: capitalize;
    display: inline-block;
  }

  .badge-active { background: #22c55e; color: white; }
  .badge-inactive { background: #f97316; color: white; }

  /* Pagination */
  .pagination {
    margin-top: 40px;
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .pagination a,
  .pagination span {
    min-width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 14px;
    border-radius: 999px;
    background: #1e293b;
    color: #f1f5f9;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.25s ease;
    box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  }

  .pagination a:hover {
    background: #3b82f6;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0,0,0,0.45);
  }

  .pagination a.active {
    background: #4338ca;
    color: #fff;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(67,56,202,0.6);
  }

  .pagination span.disabled {
    opacity: 0.5;
    cursor: default;
    box-shadow: none;
  }
</style>


<div class="users-container">
  <h1>Manage Users</h1>

  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5V4H2v16h5m10 0a2 2 0 11-4 0m4 0a2 2 0 11-4 0" />
      </svg>
      <div class="stat-title">Total Users</div>
      <div class="stat-value"><%= stats.total %></div>
    </div>
    <div class="stat-card">
      <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
      <div class="stat-title">Active</div>
      <div class="stat-value"><%= stats.active %></div>
    </div>
    <div class="stat-card">
      <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      <div class="stat-title">Inactive</div>
      <div class="stat-value"><%= stats.inactive %></div>
    </div>
  </div>

  <!-- Filters -->
  <form method="GET" class="filters">
    <input type="text" name="search" placeholder="Search by name or email..." value="<%= search || '' %>">
    
    <select name="status">
      <option value="">All Status</option>
      <option value="active" <%= status === "active" ? "selected" : "" %>>Active</option>
      <option value="inactive" <%= status === "inactive" ? "selected" : "" %>>Inactive</option>
    </select>

    <select name="limit">
      <option value="5"  <%= limit==5 ? 'selected' : '' %>>5 / page</option>
      <option value="10" <%= limit==10 ? 'selected' : '' %>>10 / page</option>
      <option value="25" <%= limit==25 ? 'selected' : '' %>>25 / page</option>
      <option value="50" <%= limit==50 ? 'selected' : '' %>>50 / page</option>
    </select>

    <button type="submit" class="btn btn-filter">Apply</button>
    <a href="/api/admin/dashboard/users" class="btn btn-reset">Reset</a>
  </form>

  <!-- Users Table -->
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Email</th>
          <th>Status</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %>
          <% users.forEach(user => { %>
            <tr>
              <td>
                <% if (user.profilePicture) { %>
                  <img src="<%= user.profilePicture %>" class="profile-pic" alt="">
                <% } %>
                <%= user.name || user.username || "N/A" %>
              </td>
              <td><%= user.email %></td>
              <td>
                <% if (user.isActive) { %>
                  <span class="badge badge-active">Active</span>
                <% } else { %>
                  <span class="badge badge-inactive">Inactive</span>
                <% } %>
              </td>
              <td><%= user.createdAt ? new Date(user.createdAt).toDateString() : "N/A" %></td>
              <td>
                <form action="/api/admin/dashboard/users/toggle-status/<%= user._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn <%= user.isActive ? 'btn-deactivate' : 'btn-activate' %>">
                    <%= user.isActive ? "Deactivate" : "Activate" %>
                  </button>
                </form>
                <form action="/api/admin/users/delete/<%= user._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                  <button type="submit" class="btn btn-delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" style="text-align:center; padding: 40px; font-size: 16px; color: #9ca3af;">
              No users found
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="pagination">
    <% if (page > 1) { %>
      <a href="?page=1&limit=<%= limit %>&search=<%= search %>&status=<%= status %>">« First</a>
      <a href="?page=<%= page-1 %>&limit=<%= limit %>&search=<%= search %>&status=<%= status %>">‹ Prev</a>
    <% } else { %>
      <span class="disabled">« First</span>
      <span class="disabled">‹ Prev</span>
    <% } %>

    <% for (let i = Math.max(1, page-2); i <= Math.min(totalPages, page+2); i++) { %>
      <a href="?page=<%= i %>&limit=<%= limit %>&search=<%= search %>&status=<%= status %>" 
         class="<%= page==i?'active':'' %>"><%= i %></a>
    <% } %>

    <% if (page < totalPages) { %>
      <a href="?page=<%= page+1 %>&limit=<%= limit %>&search=<%= search %>&status=<%= status %>">Next ›</a>
      <a href="?page=<%= totalPages %>&limit=<%= limit %>&search=<%= search %>&status=<%= status %>">Last »</a>
    <% } else { %>
      <span class="disabled">Next ›</span>
      <span class="disabled">Last »</span>
    <% } %>
  </div>
</div>
