<%- layout("/layouts/boilerplate") -%>

<style>

  .dashboard-container {
    padding: 50px 30px;
    max-width: 1500px;
    margin: auto;
  }

  h1 {
    font-size: 40px;
    font-weight: 900;
    margin-bottom: 12px;
    color: #ffffff;
    text-align: center;
    text-shadow: 0px 4px 10px rgba(0,0,0,0.7);
  }

  .subtitle {
    text-align: center;
    color: #cbd5e1;
    font-size: 16px;
    margin-bottom: 40px;
  }

  /* === Section Headings === */
  h2 {
    font-size: 22px;
    margin: 30px 0 18px;
    color: #f9fafb;
    font-weight: 700;
    position: relative;
  }

  h2::after {
    content: "";
    display: block;
    width: 70px;
    height: 3px;
    background: linear-gradient(90deg, #8b5cf6, #6d28d9);
    margin-top: 6px;
    border-radius: 2px;
  }

  /* === Stats Cards === */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 26px;
    margin-bottom: 55px;
  }

  .stat-card {
    background: linear-gradient(135deg, #4c1d95, #7c3aed);
    padding: 26px;
    border-radius: 18px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.7);
    display: flex;
    align-items: center;
    gap: 18px;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .stat-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.8);
  }

  .stat-icon {
    font-size: 36px;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255,255,255,0.15);
    flex-shrink: 0;
  }

  .stat-label {
    font-size: 15px;
    color: #e2e8f0;
    margin-bottom: 6px;
    font-weight: 500;
  }

  .stat-value {
    font-size: 34px;
    font-weight: 800;
    color: #ffffff;
    animation: counterUp 2s ease;
  }

  @keyframes counterUp {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  /* === Table Containers === */
  .table-container {
    background: #1e293b;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0,0,0,0.6);
    padding: 22px;
    margin-top: 40px;
  }

  .table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18px;
    flex-wrap: wrap;
    gap: 12px;
  }

  .table-header input {
    padding: 8px 12px;
    border-radius: 10px;
    border: none;
    outline: none;
    font-size: 14px;
    background: #334155;
    color: #f1f5f9;
  }

  .table-header .actions {
    display: flex;
    gap: 8px;
  }

  .export-btn {
    padding: 6px 14px;
    border-radius: 8px;
    border: none;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    color: #fff;
    background: #6d28d9;
    transition: background 0.2s ease;
  }
  .export-btn:hover {
    background: #4c1d95;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    color: #f1f5f9;
  }

  thead {
    background: linear-gradient(90deg, #312e81, #4338ca);
  }

  th, td {
    padding: 14px 18px;
    text-align: left;
    font-size: 14px;
  }

  th {
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 0.5px;
  }

  tbody tr:nth-child(even) {
    background: #24344c;
  }

  tbody tr:hover {
    background: #33425c;
  }

  /* === Badges === */
  .badge {
    display: inline-block;
    padding: 5px 12px;
    border-radius: 14px;
    font-size: 12px;
    font-weight: 600;
    text-transform: capitalize;
  }
  .bg-success { background: #16a34a; color: #fff; }
  .bg-warning { background: #facc15; color: #000; }
  .bg-danger { background: #dc2626; color: #fff; }
  .bg-secondary { background: #6b7280; color: #fff; }

  /* === Buttons === */
  .btn-action {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .btn-approve { background: #16a34a; color: #fff; }
  .btn-reject { background: #dc2626; color: #fff; }
  .btn-view { background: #6b7280; color: #fff; }

  .btn-approve:hover { background: #15803d; }
  .btn-reject:hover { background: #b91c1c; }
  .btn-view:hover { background: #4b5563; }

  /* Empty state */
  .empty-state {
    text-align: center;
    color: #94a3b8;
    font-style: italic;
    padding: 30px 0;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 10px;
    flex-wrap: wrap;
  }

  .pagination a {
    padding: 6px 12px;
    border-radius: 6px;
    background: #334155;
    color: #f1f5f9;
    text-decoration: none;
    font-size: 13px;
  }

  .pagination a.active {
    background: #6d28d9;
    font-weight: bold;
  }

  .pagination a:hover {
    background: #4f46e5;
  }

  /* === Responsive Tables === */
  @media (max-width: 768px) {
    th, td { font-size: 12px; padding: 10px; }
    .stat-card { flex-direction: column; text-align: center; }
    table, thead, tbody, th, td, tr {
      display: block;
      width: 100%;
    }
    thead { display: none; }
    tbody tr {
      margin-bottom: 15px;
      background: #24344c;
      border-radius: 10px;
      padding: 12px;
    }
    td {
      text-align: right;
      position: relative;
      padding-left: 50%;
    }
    td::before {
      content: attr(data-label);
      position: absolute;
      left: 15px;
      font-weight: 600;
      text-transform: uppercase;
      color: #cbd5e1;
    }
  }
</style>

