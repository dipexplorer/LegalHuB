<% layout("/layouts/boilerplate") -%>

<style>
    .btn {
        width: 100%;
        padding: 15px 25px;
        background: linear-gradient(90deg, #4e00ff, #8e00ff);
        border: none;
        border-radius: 25px;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(78, 0, 255, 0.5);
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(142, 0, 255, 0.7);
    }

    .form-box {
        margin-top: 60px;
    }

    .glass-card {
    background: rgba(20,20,20,0.55);
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0,0,0,0.37);
    border-radius: 18px;
  }
  input[type="email"]:focus {
    border: 2px solid #e040fb;
    box-shadow: 0 0 8px #e040fb66;
    background-color: #f5e6fc;
  }
  .btn:focus {
    background-color: #a259ff;
    box-shadow: 0 4px 10px #e040fb55;
    outline: none;
  }
</style>

<div class="frm_container row ">
  <div class="col-md-4 offset-md-4 frm_box form-box glass-card">
    <h2 class="text-center mb-3" style="font-weight: 800; color: #e040fb;">Reset Password</h2>
    <form method="POST" action="/api/users/request-reset" id="resetForm" class="mt-5">
      <div class="mb-3">
        <label for="email" class="form-label" style="font-weight: 600;">Registered Email</label>
        <input type="email" class="form-control mb-3" id="email" name="email" required
         placeholder="Enter your registered email"
         style="padding: 11px; background-color: rgb(237, 232, 232); color:#000000; border-radius: 8px;">
        <div class="text-center">
          <button type="submit" class="btn d-block mx-auto px-4 py-2" id="resetBtn" style="border-radius:18px; font-weight: 600;">
            <span id="btnText">Send Reset Link</span>
            <span id="btnSpinner" class="spinner-border spinner-border-sm d-none"></span>
          </button>
        </div>
        <div id="feedbackMsg" class="alert alert-success d-none mt-3">
          Reset link sent! Check your mail.
        </div>
      </div>
    </form>
  </div>
</div>

<script>
const form = document.getElementById("resetForm");
const btnText = document.getElementById("btnText");
const btnSpinner = document.getElementById("btnSpinner");
const resetBtn = document.getElementById("resetBtn");
const feedbackMsg = document.getElementById("feedbackMsg");

form.addEventListener("submit", function(e){
  btnText.classList.add("d-none");
  btnSpinner.classList.remove("d-none");
  resetBtn.disabled = true;

  // Simulate AJAX: after 1.5sec show feedback (replace with your real AJAX logic)
  setTimeout(() => {
    btnSpinner.classList.add("d-none");
    btnText.classList.remove("d-none");
    resetBtn.disabled = false;
    feedbackMsg.classList.remove("d-none");
    form.reset();
  }, 1500);
});
</script>