<% layout("layouts/boilerplate") %>

<style>
    /* ✅ Root Variables */
    :root {
        --primary-color: #6C5CE7;
        --accent-color: #00D9FF;
        --bg-dark: #0B0E1D;
        --bg-section: #161B2E;
        --text-primary: #FFFFFF;
        --text-secondary: #A0A4B8;
        --border-color: rgba(108, 92, 231, 0.2);
    }

    /* ✅ Background & Body */
    body {
        background: var(--bg-dark);
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* ✅ Hero Section */
    .privacy-hero {
        background: linear-gradient(135deg, #1a1f3a 0%, #0B0E1D 100%);
        padding: 100px 20px 60px;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
    }

    .privacy-hero-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .privacy-hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 10px;
        letter-spacing: -1px;
    }

    .privacy-hero .subtitle {
        font-size: 0.95rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
    }

    /* ✅ Main Container */
    .privacy-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 60px 20px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    /* ✅ Question Block */
    .question-block {
        background: var(--bg-section);
        border-radius: 12px;
        padding: 35px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .question-block::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(180deg, var(--primary-color), var(--accent-color));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .question-block:hover {
        border-color: var(--primary-color);
        transform: translateY(-2px);
    }

    .question-block:hover::before {
        opacity: 1;
    }

    .question-block h2 {
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .question-block p,
    .question-block li {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.8;
        margin-bottom: 12px;
    }

    .question-block strong {
        color: var(--text-primary);
        font-weight: 600;
    }

    .question-block a {
        color: var(--primary-color);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .question-block a:hover {
        color: var(--accent-color);
    }

    /* ✅ Lists */
    .question-block ul {
        list-style: none;
        padding-left: 0;
        margin: 15px 0;
    }

    .question-block li {
        position: relative;
        padding-left: 25px;
        margin-bottom: 12px;
    }

    .question-block li::before {
        content: '•';
        position: absolute;
        left: 8px;
        color: var(--primary-color);
        font-size: 1.2rem;
        line-height: 1.5;
    }

    /* ✅ Special Blocks */
    .highlight-section {
        background: rgba(108, 92, 231, 0.08);
        border: 1px solid rgba(108, 92, 231, 0.3);
        border-radius: 8px;
        padding: 20px;
        margin: 15px 0;
    }

    .contact-info {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
    }

    .contact-info p {
        margin: 8px 0;
    }

    /* ✅ Full Width Sections */
    .full-width {
        grid-column: 1 / -1;
    }

    /* ✅ Effective Date */
    .effective-date {
        background: var(--bg-section);
        border-radius: 12px;
        padding: 25px 35px;
        border: 1px solid var(--border-color);
        margin-bottom: 30px;
        text-align: center;
        grid-column: 1 / -1;
    }

    .effective-date strong {
        color: var(--primary-color);
        font-size: 1.1rem;
    }

    .effective-date span {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    /* ✅ Responsive */
    @media (max-width: 968px) {
        .privacy-container {
            grid-template-columns: 1fr;
        }

        .privacy-hero h1 {
            font-size: 2.5rem;
        }

        .question-block {
            padding: 25px;
        }
    }

    /* ✅ Animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .question-block {
        animation: fadeIn 0.6s ease forwards;
        animation-delay: calc(var(--delay) * 0.05s);
        opacity: 0;
    }

    /* ✅ Scroll Progress Bar */
    .progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        z-index: 1000;
        transition: width 0.1s ease;
    }
</style>

