        /* ‚úÖ Custom List Item - UPGRADED STYLE */
    .custom-item {
        display: flex;
        align-items: center;
        gap: 15px; /* A little more space */
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 15px 20px;
        border-radius: 12px;
        margin-bottom: 16px;
        color: #e0e0e0;
        font-size: 1rem;
        transition: all 0.3s ease; /* Smoother transition */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* New hover effect */
    .custom-item:hover {
        transform: translateY(-5px) scale(1.02); /* A more dynamic hover */
        background-color: rgba(255, 255, 255, 0.08);
        border-color: rgba(80, 250, 123, 0.5); /* Border lights up green */
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    }

    /* New CSS-drawn checkmark */
   .custom-item::before {
        content: ''; /* We will draw the checkmark ourselves */
        flex-shrink: 0; /* Prevents checkmark from shrinking */
        display: inline-block;
        width: 8px;
        height: 15px;
        border: solid #50fa7b; /* Green color from the theme */
        border-width: 0 3px 3px 0;
        transform: rotate(45deg);
        margin-left: 5px;
    }

        /* ‚úÖ CTA Button */
        .cta-button {
            display: inline-block;
            margin-top: 24px;
            padding: 14px 28px;
            background-color: #ff79c6;
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            box-shadow: 0 6px 16px rgba(255, 121, 198, 0.4);
        }

        .cta-button:hover {
            background-color: #ff6ec7;
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(255, 121, 198, 0.6);
        }

        /* ‚úÖ Footer Styling */
        .footer {
            margin-top: 40px;
            padding: 24px;
            background-color: rgba(20, 20, 30, 0.9);
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 24px;
            flex-wrap: wrap;
        }

        .footer-link {
            color: #ff79c6;
            font-size: 1rem;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .footer-link:hover {
            color: #ff6ec7;
            transform: translateY(-2px);
        }

        .footer-text {
            color: #bbb;
            font-size: 0.9rem;
            margin-top: 12px;
        }

        /* ‚úÖ Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
