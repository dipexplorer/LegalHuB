    font-size: 1.6rem; /* A bit smaller than the text */
}

        h1:hover {
            color: #ff6ec7;
        }

       

        /* âœ… Last Updated */
        .last-updated {
            text-align: center;
            font-size: 1rem;
            color: #b2bec3;
            margin-bottom: 32px;
            font-style: italic;
        }

        /* âœ… Paragraphs */
        p {
            font-size: 1rem;
            color: #dcdcdc;
            margin-bottom: 16px;
            line-height: 1.7;
        }

        /* âœ… Strong Text */
        strong {
            color: #ffb86c;
            /* Orange */
            font-weight: 600;
        }

        /* âœ… Custom List Replacement */
        .custom-item {
            margin-bottom: 14px;
            color: #e0e0e0;
            font-size: 1rem;
            padding: 12px 18px;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.05);
            position: relative;
            transition: transform 0.2s ease, background-color 0.2s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
        }

        .custom-item::before {
            content: "âœ“";
            font-size: 20px;
            color: #50fa7b !important;
            /* Green Checkmark */
            transition: color 0.3s ease;
        }

        .custom-item:hover {
            background-color: rgba(255, 255, 255, 0.08);
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
        }

        /* âœ… CTA Button */
        .cta-button {
            display: inline-block;
            margin-top: 24px;
            padding: 14px 28px;
            background-color: #ff79c6;
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            box-shadow: 0 6px 16px rgba(255, 121, 198, 0.4);
        }

        .cta-button:hover {
            background-color: #ff6ec7;
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(255, 121, 198, 0.6);
        }

        /* âœ… Footer Styling */
        .footer {
            margin-top: 40px;
            padding: 24px;
            background-color: rgba(20, 20, 30, 0.9);
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 24px;
            flex-wrap: wrap;
        }

        .footer-link {
            color: #ff79c6;
            font-size: 1rem;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .footer-link:hover {
            color: #ff6ec7;
            transform: translateY(-2px);
        }

        .footer-text {
            color: #bbb;
            font-size: 0.9rem;
            margin-top: 12px;
        }

        /* âœ… Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
