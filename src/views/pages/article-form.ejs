<% layout("layouts/boilerplate") %>

<style>
    :root {
        --primary: #9c27b0;
        --primary-hover: #b04ec2;
        --card-bg: rgba(255, 255, 255, 0.05);
        --input-bg: rgba(255, 255, 255, 0.08);
        --text: #e0e0e0;
        --subtext: #bbb;
    }

    .form-wrapper {
        max-width: 800px;
        margin: 60px auto;
        padding: 30px;
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.3);
    }

    .form-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        border-left: 6px solid var(--primary);
        padding-left: 16px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 500;
        color: var(--text);
        display: block;
        margin-bottom: 8px;
    }

    .form-group input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #555;
        border-radius: 10px;
        background: var(--input-bg);
        color: #fff;
        font-size: 1rem;
        outline: none;
        transition: border 0.3s ease;
    }

    .form-group input:focus {
        border-color: var(--primary);
    }

    /* Quill Editor */
    .ql-editor {
        min-height: 150px;
        color: #fff;
    }

   .ql-toolbar {
    background: rgba(255, 255, 255, 0.484);
    border: 1px solid #666;
    border-radius: 8px 8px 0 0;
}

   .ql-container {
    border: 1px solid #666;
    border-top: none;
    border-radius: 0 0 8px 8px;
    background: var(--input-bg);
    color: #fff;
    min-height: 200px;
}

    /* Quill icons white */
    .ql-toolbar button svg {
        stroke: #fff;
    }

    .ql-toolbar .ql-picker {
        color: #fff;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 25px;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

    .btn-primary:hover {
        background: var(--primary-hover);
    }

    .btn-secondary {
        background: #555;
        color: #fff;
    }

    .btn-secondary:hover {
        background: #777;
    }

    /* Add Section button */
    .add-section {
        margin: 10px 0 20px;
        background: var(--input-bg);
        color: var(--text);
        padding: 10px 15px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.95rem;
        border: 1px dashed #666;
        transition: background 0.3s ease;
    }

    .add-section:hover {
        background: rgba(255, 255, 255, 0.12);
    }

    .section-wrapper {
        margin-bottom: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.04);
        border-radius: 10px;
    }

    .remove-section {
        background: #c62828;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
        font-size: 0.85rem;
    }

    .remove-section:hover {
        background: #e53935;
    }
</style>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<div class="form-wrapper">
    <h1 class="form-title">üìù Publish New Legal Article</h1>

    <form action="/api/articles" method="POST" id="articleForm">
        <!-- Title -->
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Enter article title" required>
        </div>

        <!-- Introduction -->
        <div class="form-group">
            <label for="introduction">Introduction</label>
            <div id="introductionEditor"></div>
            <textarea id="introduction" name="introduction" hidden></textarea>
        </div>

        <!-- Sections -->
        <div id="sections"></div>
        <div class="add-section">+ Add Section</div>

        <!-- Conclusion -->
        <div class="form-group">
            <label for="conclusion">Conclusion</label>
            <div id="conclusionEditor"></div>
            <textarea id="conclusion" name="conclusion" hidden></textarea>
        </div>

        <!-- Tags -->
        <div class="form-group">
            <label for="tags">Tags (comma separated)</label>
            <input type="text" id="tags" name="tags" placeholder="e.g. IBC, employment, constitution">
        </div>

        <!-- Buttons -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">‚úÖ Create</button>
            <a href="/articles" class="btn btn-secondary">‚Ü© Back</a>
        </div>
    </form>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
    // Quill editor config
    const toolbarOptions = [
        ['bold', 'italic', 'underline', 'strike'],
        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
        ['link', 'blockquote', 'code-block'],
        [{ 'header': [1, 2, 3, false] }],
        [{ 'align': [] }],
        ['clean']
    ];

    const introductionEditor = new Quill('#introductionEditor', {
        theme: 'snow',
        modules: { toolbar: toolbarOptions }
    });

    const conclusionEditor = new Quill('#conclusionEditor', {
        theme: 'snow',
        modules: { toolbar: toolbarOptions }
    });

    let sectionCount = 0;

    document.querySelector('.add-section').addEventListener('click', () => {
        sectionCount++;
        const sectionDiv = document.createElement('div');
        sectionDiv.classList.add('section-wrapper');
        sectionDiv.innerHTML = `
            <label>Section ${sectionCount} Title</label>
            <input type="text" name="sections[${sectionCount}][title]" placeholder="Enter section title" required>
            
            <label>Section ${sectionCount} Content</label>
            <div id="sectionEditor${sectionCount}"></div>
            <textarea name="sections[${sectionCount}][content]" hidden></textarea>

            <button type="button" class="remove-section">Remove Section</button>
        `;
        document.getElementById('sections').appendChild(sectionDiv);

        const editor = new Quill(`#sectionEditor${sectionCount}`, {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });

        sectionDiv.querySelector('.remove-section').addEventListener('click', () => {
            sectionDiv.remove();
        });

        sectionDiv.quill = editor;
    });

    // Sync content on submit
    document.getElementById('articleForm').addEventListener('submit', () => {
        document.getElementById('introduction').value = introductionEditor.root.innerHTML;
        document.getElementById('conclusion').value = conclusionEditor.root.innerHTML;

        document.querySelectorAll('#sections .section-wrapper').forEach((sectionDiv, index) => {
            const textarea = sectionDiv.querySelector('textarea');
            textarea.value = sectionDiv.quill.root.innerHTML;
        });
    });
</script>
