<% layout("layouts/boilerplate") %>

<style>
    /* ✅ Main Container - Clean and Modern */
    .rights-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 24px;
        background: #fafafa;
        min-height: 100vh;
    }

    /* ✅ Clean Header Section */
    .page-header {
        text-align: center;
        margin-bottom: 48px;
        background: #ffffff;
        padding: 48px 32px;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin: 0 0 12px 0;
        letter-spacing: -0.02em;
    }

    .page-subtitle {
        font-size: 1.1rem;
        color: #666;
        margin: 0;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.5;
    }

    /* ✅ Search Section - Inspired by the clean design */
    .search-section {
        background: #ffffff;
        padding: 32px;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 32px;
    }

    .search-container {
        display: flex;
        gap: 16px;
        align-items: center;
        margin-bottom: 24px;
    }

    .search-input {
        flex: 1;
        padding: 16px 20px;
        border: 2px solid #e5e5e5;
        border-radius: 12px;
        font-size: 1rem;
        background: #fafafa;
        transition: all 0.3s ease;
        outline: none;
    }

    .search-input:focus {
        border-color: #007bff;
        background: #ffffff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }

    .category-dropdown {
        min-width: 200px;
        padding: 16px 20px;
        border: 2px solid #e5e5e5;
        border-radius: 12px;
        font-size: 1rem;
        background: #fafafa;
        transition: all 0.3s ease;
        outline: none;
        cursor: pointer;
    }

    .category-dropdown:focus {
        border-color: #007bff;
        background: #ffffff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }

    .search-btn {
        padding: 16px 24px;
        background: #1a1a1a;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-btn:hover {
        background: #333;
        transform: translateY(-2px);
    }

    .reset-btn {
        padding: 16px 20px;
        background: transparent;
        color: #666;
        border: 2px solid #e5e5e5;
        border-radius: 12px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .reset-btn:hover {
        border-color: #ccc;
        background: #f5f5f5;
    }

    /* ✅ Results Info */
    .results-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding: 0 8px;
    }

    .results-count {
        font-size: 1rem;
        color: #666;
        font-weight: 500;
    }

    /* ✅ Rights Grid - Clean Card Layout */
    .rights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 24px;
        margin-bottom: 48px;
    }

    /* ✅ Rights Cards - Clean Modern Design */
    .rights-card {
        background: #ffffff;
        border: 1px solid #e5e5e5;
        border-radius: 16px;
        padding: 32px;
        transition: all 0.3s ease;
        position: relative;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .rights-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
        border-color: #d0d0d0;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 16px;
    }

    .article-number {
        background: #f8f9fa;
        color: #495057;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .category-icon {
        width: 24px;
        height: 24px;
        opacity: 0.6;
    }

    .rights-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1a1a1a;
        margin: 0 0 12px 0;
        line-height: 1.3;
    }

    .category-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        margin-bottom: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Category Colors */
    .category-equality { background: #e3f2fd; color: #1976d2; }
    .category-freedom { background: #e8f5e8; color: #388e3c; }
    .category-exploitation { background: #ffebee; color: #d32f2f; }
    .category-religion { background: #f3e5f5; color: #7b1fa2; }
    .category-cultural { background: #fff3e0; color: #f57c00; }
    .category-remedies { background: #e8eaf6; color: #3f51b5; }

    .rights-description {
        font-size: 1rem;
        color: #666;
        line-height: 1.6;
        margin-bottom: 24px;
        flex-grow: 1;
    }

    .card-actions {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px solid #f0f0f0;
    }

    .view-details-btn {
        background: #1a1a1a;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .view-details-btn:hover {
        background: #333;
        color: white;
        transform: translateY(-1px);
    }

    /* ✅ Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 32px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: #1a1a1a;
        margin: 0 0 12px 0;
    }

    .empty-state p {
        color: #666;
        font-size: 1rem;
        margin: 0;
    }

    /* ✅ Pagination - Clean Design */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        margin-top: 48px;
    }

    .pagination-btn {
        padding: 12px 16px;
        border: 1px solid #e5e5e5;
        background: #ffffff;
        color: #666;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        min-width: 44px;
        text-align: center;
    }

    .pagination-btn:hover {
        border-color: #ccc;
        background: #f5f5f5;
        color: #333;
    }

    .pagination-btn.active {
        background: #1a1a1a;
        color: white;
        border-color: #1a1a1a;
    }

    .pagination-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* ✅ Responsive Design */
    @media (max-width: 768px) {
        .rights-page {
            padding: 24px 16px;
        }

        .page-header {
            padding: 32px 24px;
        }

        .page-title {
            font-size: 2rem;
        }

        .search-section {
            padding: 24px;
        }

        .search-container {
            flex-direction: column;
            align-items: stretch;
        }

        .category-dropdown {
            min-width: auto;
        }

        .rights-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .rights-card {
            padding: 24px;
        }

        .results-info {
            flex-direction: column;
            gap: 12px;
            align-items: flex-start;
        }
    }

    @media (max-width: 480px) {
        .rights-page {
            padding: 16px 12px;
        }

        .page-header {
            padding: 24px 16px;
        }

        .search-section {
            padding: 20px;
        }

        .rights-card {
            padding: 20px;
        }
    }
</style>

    <div class="rights-page">
        <!-- Clean Header Section -->
        <div class="page-header">
            <h1 class="page-title">Fundamental Rights of India</h1>
            <p class="page-subtitle">
                Discover the 6 fundamental rights guaranteed by the Indian Constitution - your essential protections for 
                equality, freedom, and dignity as a citizen.
            </p>
        </div>

        <!-- Search Section -->
        <div class="search-section">
            <form class="search-form" id="search-form" method="GET" action="/rights">
                <div class="search-container">
                    <input 
                        type="text" 
                        id="search-input" 
                        name="search"
                        value="<%= currentFilters.search %>"
                        placeholder="Search by right name, keywords, or article number..." 
                        class="search-input"
                    >
                    
                    <select id="category-filter" name="category" class="category-dropdown">
                        <option value="all">All Categories</option>
                        <% filterOptions.categories.forEach(category => { %>
                            <option 
                                value="<%= category.value %>" 
                                <%= currentFilters.category === category.value ? 'selected' : '' %>
                            >
                                <%= category.label %>
                            </option>
                        <% }) %>
                    </select>

                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                        Search
                    </button>

                    <button type="button" class="reset-btn" onclick="clearAllFilters()">
                        <i class="fas fa-refresh"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Results Info -->
        <div class="results-info">
            <div class="results-count">
                Showing <%= stats.filteredResults %> rights
            </div>
        </div>

        <!-- Rights Grid -->
        <% if (rights && rights.length > 0) { %>
            <div class="rights-grid">
                <% rights.forEach(right => { 
                    // Determine category class for styling
                    let categoryClass = 'category-equality';
                    if (right.category.includes('Freedom')) categoryClass = 'category-freedom';
                    else if (right.category.includes('Exploitation')) categoryClass = 'category-exploitation';
                    else if (right.category.includes('Religion')) categoryClass = 'category-religion';
                    else if (right.category.includes('Cultural')) categoryClass = 'category-cultural';
                    else if (right.category.includes('Remedies')) categoryClass = 'category-remedies';
                    
                    // Determine icon based on category
                    let categoryIcon = '⚖️';
                    if (right.category.includes('Freedom')) categoryIcon = '🗽';
                    else if (right.category.includes('Exploitation')) categoryIcon = '🛡️';
                    else if (right.category.includes('Religion')) categoryIcon = '🕊️';
                    else if (right.category.includes('Cultural')) categoryIcon = '📚';
                    else if (right.category.includes('Remedies')) categoryIcon = '⚖️';
                %>
                    <div class="rights-card">
                        <div class="card-header">
                            <div class="article-number">Article <%= right.articleNumber %></div>
                            <div class="category-icon"><%= categoryIcon %></div>
                        </div>
                        
                        <h3 class="rights-title"><%= right.name %></h3>
                        
                        <div class="category-badge <%= categoryClass %>">
                            <%= right.category %>
                        </div>
                        
                        <p class="rights-description">
                            <%= right.description.length > 150 ? right.description.substring(0, 150) + '...' : right.description %>
                        </p>
                        
                        <div class="card-actions">
                            <a href="<%= right.sourceLink %>" target="_blank" class="view-details-btn">
                                <i class="fas fa-external-link-alt"></i>
                                View Full Details
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h3>No rights found</h3>
                <p>Try adjusting your search criteria or browse all categories.</p>
            </div>
        <% } %>

        <!-- Pagination -->
        <% if (totalPages && totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="javascript:void(0)" onclick="changePage(<%= currentPage - 1 %>)" class="pagination-btn">Previous</a>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="javascript:void(0)" 
                       onclick="changePage(<%= i %>)" 
                       class="pagination-btn <%= i === currentPage ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <a href="javascript:void(0)" onclick="changePage(<%= currentPage + 1 %>)" class="pagination-btn">Next</a>
                <% } %>
            </div>
        <% } %>
    </div>


    <script>
        // Clean and Simple Search Functionality
        const searchForm = document.getElementById('search-form');
        const searchInput = document.getElementById('search-input');
        const categoryFilter = document.getElementById('category-filter');

        // Form submission with clean URL parameters
        searchForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const formData = new FormData(searchForm);
            const url = new URL(window.location.origin + '/rights');
            
            // Only add non-empty parameters
            for (let [key, value] of formData.entries()) {
                if (value && value.trim() && value !== 'all') {
                    url.searchParams.set(key, value.trim());
                }
            }
            
            // Reset to first page on new search
            url.searchParams.delete('page');
            
            window.location.href = url.toString();
        });

        // Real-time category filtering
        categoryFilter.addEventListener('change', () => {
            searchForm.dispatchEvent(new Event('submit'));
        });

        // Clear all filters
        function clearAllFilters() {
            searchInput.value = '';
            categoryFilter.value = 'all';
            
            const url = new URL(window.location.origin + '/rights');
            window.location.href = url.toString();
        }

        // Pagination with filter preservation
        function changePage(page) {
            if (page) {
                const url = new URL(window.location);
                url.searchParams.set('page', page);
                window.location.href = url.toString();
            }
        }

        // Keyboard shortcut for search focus
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                searchInput.focus();
            }
        });

        // Search input enhancements
        searchInput.addEventListener('focus', function() {
            this.parentElement.style.transform = 'translateY(-1px)';
        });

        searchInput.addEventListener('blur', function() {
            this.parentElement.style.transform = 'translateY(0)';
        });

        // Loading state for search button
        searchForm.addEventListener('submit', function() {
            const searchBtn = this.querySelector('.search-btn');
            const originalContent = searchBtn.innerHTML;
            
            searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Searching...';
            searchBtn.disabled = true;
            
            // Re-enable after a short delay (in case of quick redirects)
            setTimeout(() => {
                searchBtn.innerHTML = originalContent;
                searchBtn.disabled = false;
            }, 2000);
        });
    </script>