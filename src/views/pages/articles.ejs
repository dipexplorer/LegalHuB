<% layout("layouts/boilerplate") %>

<style>
    :root {
        --primary: #9c27b0;
        --light-bg: rgba(255, 255, 255, 0.05);
        --hover-bg: rgba(255, 255, 255, 0.08);
        --text: #e0e0e0;
        --subtext: #bbb;
    }

    .articles-wrapper {
        max-width: 1100px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .page-title {
        font-size: 2.6rem;
        font-weight: 700;
        color: #ffffff;
        text-align: left;
        margin-bottom: 30px;
        border-left: 6px solid var(--primary);
        padding-left: 16px;
    }

    /* âœ… Search Bar */
    .search-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 32px;
    }

    #search-input {
        flex-grow: 1;
        padding: 12px 16px;
        border: 1px solid #555;
        border-radius: 8px;
        background-color: var(--light-bg);
        color: #fff;
        font-size: 16px;
        outline: none;
        transition: border-color 0.3s ease;
    }

    #search-input:focus {
        border-color: var(--primary);
    }

    #search-button {
        background: var(--primary);
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    #search-button:hover {
        background: #b04ec2;
    }

    /* âœ… Articles Grid */
    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
    }

    .article-card {
        background: var(--light-bg);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, background-color 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .article-card:hover {
        background-color: var(--hover-bg);
        transform: translateY(-4px);
    }

    .article-card h2 {
        font-size: 1.4rem;
        color: #fff;
        margin-bottom: 10px;
        font-weight: 600;
        line-height: 1.4;
    }

    .article-card p {
        color: var(--text);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 12px;
        flex-grow: 1;
    }

    .meta-info {
        font-size: 0.85rem;
        color: var(--subtext);
        margin-bottom: 10px;
    }

    .read-more {
        color: var(--primary);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s ease;
        margin-top: 10px;
    }

    .read-more:hover {
        color: #b366cc;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .search-bar {
            flex-direction: column;
        }

        #search-button {
            width: 100%;
        }
    }
</style>

<div class="articles-wrapper">
    <h1 class="page-title">ðŸ“š Explore Legal Articles</h1>

    <!-- âœ… Search -->
    <div class="search-bar">
        <input type="text" id="search-input" placeholder="Search legal topics, keywords..." />
        <button id="search-button">Search</button>
    </div>

    <!-- âœ… Article List -->
    <div class="articles-grid">
        <% articles.forEach(article => { %>
            <div class="article-card">
                <h2><%= article.title %></h2>
                <div class="meta-info">
                    By <%= article.author?.name || "Unknown Author" %> Â· <%= article.createdAt.toDateString() %>
                </div>
                <p><%= article.introduction.replace(/<[^>]+>/g, '').substring(0, 150) %>...</p>
                <a href="/api/articles/<%= article._id %>" class="read-more">Read More â†’</a>
            </div>
        <% }) %>
    </div>
</div>

<!-- âœ… JavaScript Search -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('search-input');
        const searchButton = document.getElementById('search-button');
        const articleCards = document.querySelectorAll('.article-card');

        function filterArticles() {
            const query = searchInput.value.toLowerCase();

            articleCards.forEach(card => {
                const title = card.querySelector('h2').innerText.toLowerCase();
                const body = card.querySelector('p').innerText.toLowerCase();

                if (title.includes(query) || body.includes(query)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        let debounceTimer;
        searchInput.addEventListener('input', () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(filterArticles, 300);
        });

        searchButton.addEventListener('click', filterArticles);

        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                filterArticles();
            }
        });
    });
</script>
